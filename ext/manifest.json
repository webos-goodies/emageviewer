{
  "manifest_version": 3,
  "name": "eMage Viewer",
  "description": "Extended image viewer",
  "version": "1.0.0",

  "icons" : {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "background": {
    "service_worker": "host.js"
  },

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    },
    "default_title": "eMage Viewer"
  }
}